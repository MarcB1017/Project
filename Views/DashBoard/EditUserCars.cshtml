                                                <option value="Volvo">Volvo</option>
                                            </select>
                                        </div>
                                        <div class="col-sm-4 form-group">
                                <label asp-for="CarModel">Model</label>
                                            <input asp-for="CarModel" class="form-control" placeholder="CarModel" />
                                            <span asp-validation-for="CarModel" class="text-danger"></span>
                                        </div>
                                        <div class="col-sm-4 form-group">
                                            <label asp-for="CarYear">Year</label>
                                            <select id="CarYear" name="CarYear" class="form-control text-center">
