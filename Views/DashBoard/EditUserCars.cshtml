                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>

                                <div class="col-sm-6 form-group">
                                    <label asp-for="Milage">Milage</label>
                                    <input asp-for="Milage" class="form-control" placeholder="Milage" />
                                    <span asp-validation-for="Milage" class="text-danger"></span>
                                </div>

                        <div class="form-group">
                                <label asp-for="Image">Update Car Image</label>
                            <input asp-for="Image" type="file" class="form-control" placeholder="Image" required/>
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>


                            <div class="end">


                                @if (User.Identity.IsAuthenticated && User.IsInRole("admin") || User.Identity.IsAuthenticated && User.IsInRole("user"))
                                {
                                    <input type="button" value="CANCEL" class="btn btn-outline-danger col-sm-4" onclick="location.href='@Url.Action("ViewCars","DashBoard")';" />

                                    <input type="submit" value="UPDATE NOW" class="btn btn-outline-primary col-sm-4" />
                                }
                         
                            </div>
            </div>
                </form>
            </div>
        </div>

</div>
</body>