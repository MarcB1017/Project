                                            </select>
                                        </div>
                                    

                        </div>
                      
                        <div class="form-group">
                            <label asp-for="Description">Description</label>
                            <input asp-for="Description" class="form-control" row="3" placeholder="Description" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-sm-4 form-group">
                                <label asp-for="Address.City">City</label>
                                <input asp-for="Address.City" class="form-control" placeholder="City" />
                                <span asp-validation-for="Address.City" class="text-danger"></span>
                            </div>
                            <div class="col-sm-4 form-group">
                                <label asp-for="Address.Province">Province</label>
                                <input asp-for="Address.Province" class="form-control" placeholder="Province" />
