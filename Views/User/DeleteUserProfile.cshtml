@using MVC_CarsForSale.Models
@model AppUser

<head>

    <link rel="stylesheet" type="text/css" href="" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Are you sure you want to delete this profile ?</title>

</head>

<body>
    <div class="album py-5 bg-light">

        <h2> ARE YOU SURE YOU WANT TO DELETE THIS USER ?</h2>

        <form method="post" asp-action="DeleteUserProfile" asp-controller="User" enctype="multipart/form-data">

            <input type="hidden" value="Id" id="Id" />

            <div class="form-group">
                <img src="@Model.ProfilePictureUrl"> <input type="hidden" value="@Model.ProfilePictureUrl" />
            </div>

            <div class="text-center">
                <label asp-for="FirstName" style="">First Name</label>
                <input asp-for="FirstName" class="form-control"  placeholder="First Name" readonly>
            </div>

            <div class="text-center">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control"  placeholder="Last Name" readonly>
            </div>

            <div class="text-center">
                <label asp-for="City">City</label>
                <input asp-for="City" class="form-control" placeholder="City" readonly>

            </div>

            <div class="text-center">
                <label asp-for="Country">Country</label>
                <input asp-for="Country" class="form-control"  placeholder="Country" readonly>

            </div>
        </form>

        <div class="form-group">

            <form action="DeleteUserProfile" method="post">

                <input type="hidden" asp-for="Id" />

                <div class="end">
                    <input type="button" value="CANCEL" class="btn btn-outline-danger col-sm-4" onclick="location.href='@Url.Action("Index","User")';" />

                @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                {
                    <input type="submit" value="DELETE NOW" class="btn btn-outline-primary col-sm-4" />
                }
        </div>

            </form>

        </div>
    </div>
</body>